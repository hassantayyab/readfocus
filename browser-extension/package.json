{
  "name": "@readfocus/browser-extension-ts",
  "version": "1.0.0",
  "description": "ReadFocus Chrome Extension - TypeScript Version",
  "private": true,
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "build:watch": "tsc --watch",
    "copy-assets": "cp -r icons styles *.html *.css dist/ 2>/dev/null || true",
    "clean": "rm -rf dist",
    "dev": "npm run clean && npm run build:watch",
    "type-check": "tsc --noEmit",
    "lint": "echo 'Linting not configured - add ESLint if needed'"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.270",
    "typescript": "^5.3.0"
  },
  "files": [
    "src/**/*",
    "dist/**/*",
    "*.html",
    "*.css",
    "manifest.json"
  ]
}